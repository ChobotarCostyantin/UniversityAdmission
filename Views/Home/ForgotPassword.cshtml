@model UniversityAdmission.Models.DTO.ForgotPasswordDTO

@{
    ViewData["Title"] = "Відновлення пароля";
}

<div>
    <h2 class="text-center">Відновлення пароля</h2>
    @if (Model == null || Model.Password == null)
    {
        <form asp-action="ForgotPassword" class="w-25 mx-auto d-flex flex-column">
            <div class="form-group mb-3">
                <label asp-for="Login">Логін</label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group mb-5">
                <input type="submit" class="btn btn-primary" value="Відновити пароль" />
            </div>
        </form>
    }
    else
    {
        <div class="text-center">
            <h4>Ваш логін: @Model.Login</h4>
            <h4>Ваш пароль: @Model.Password</h4>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">На головну</a>
        </div>
    }
</div>
