@using UniversityAdmission.Data.Repos
@using UniversityAdmission.Models.Entities
@using UniversityAdmission.Models.DTO
@model TeacherDTO

@{
    ViewData["Title"] = "Додати викладача";
}

<div>
    <h2 class="text-center">Додати викладача</h2>
    <form asp-action="Add" class="w-75 mx-auto d-flex flex-column">
        <div class="form-group">
            <label asp-for="FullName" class="control-label ms-2 mb-1">ПІБ викладача</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger ms-2"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth" class="control-label ms-2 mb-1">Дата народження</label>
            <input type="date" asp-for="DateOfBirth" class="form-control" />
            <span asp-validation-for="DateOfBirth" class="text-danger ms-2"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label ms-2 mb-1">Номер телефону</label>
            <input asp-for="PhoneNumber" type="tel" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger ms-2"></span>
        </div>
        <div class="form-group">
            <label asp-for="Subject" class="control-label ms-2 mb-1">Предмет</label>
            <select asp-for="Subject" class="form-control">
                <option value="">Оберіть предмет</option>
                @foreach (var subject in Enum.GetValues(typeof(Subjects)))
                {
                    <option value="@subject">@subject</option>
                }
            </select>
            <span asp-validation-for="Subject" class="text-danger ms-2"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Додати" class="btn btn-primary" />
            <a asp-controller="Teacher" asp-action="Index" class="btn btn-secondary ms-2">Назад</a>
        </div>
    </form>
</div>