@using UniversityAdmission.Models.Entities
@using UniversityAdmission.Models.DTO
@model FacultyDTO
@{
    ViewData["Title"] = "Додати факультет";
}

<div>
    <h2 class="text-center">Додати факультет</h2>
    <form asp-action="Add" class="w-75 mx-auto d-flex flex-column">
        <div class="form-group">
            <label asp-for="Name" class="control-label ms-2 mb-1">Назва факультету</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger ms-2"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label ms-2 mb-1">Опис факультету</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger ms-2"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Додати" class="btn btn-primary" />
            <a asp-controller="Faculty" asp-action="Index" class="btn btn-secondary ms-2">Назад</a>
        </div>
    </form>
</div>