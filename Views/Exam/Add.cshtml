@using UniversityAdmission.Models.Entities
@using UniversityAdmission.Models.DTO
@model ExamDTO
@{
    ViewData["Title"] = "Додати екзамен";
}

<div>
    <h2 class="text-center">Додати екзамен</h2>
    <form asp-action="Add" class="w-75 mx-auto d-flex flex-column">
        <div class="form-group">
            <label asp-for="Name" class="control-label ms-2 mb-1">Назва екзамену</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger ms-2"></span>
        </div>
        <div class="form-group">
            <label asp-for="Subject" class="control-label ms-2 mb-1">Предмет</label>
            <input asp-for="Subject" class="form-control" />
            <span asp-validation-for="Subject" class="text-danger ms-2"></span>
        </div>
        <div class="form-group">

        </div>
    </form>
</div>