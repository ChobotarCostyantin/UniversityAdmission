@using UniversityAdmission.Models.DTO
@using UniversityAdmission.Models.Entities
@model EditRequest

@{
    ViewData["Title"] = "Редагувати користувача";
}

<div>
    <h2 class="text-center">Редагувати користувача @Model.Login (@Model.Email)</h2>
    <form asp-action="Edit" class="w-75 mx-auto d-flex flex-column">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Login" class="control-label ms-2 mb-1">Ім'я</label>
            <input asp-for="Login" class="form-control" value="@Model.Login" />
            <span asp-validation-for="Login" class="text-danger ms-2"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label ms-2 mb-1">Email</label>
            <input asp-for="Email" class="form-control" value="@Model.Email" />
            <span asp-validation-for="Email" class="text-danger ms-2"></span>
        </div>
        <div class="form-group">
            <label asp-for="Role" class="control-label ms-2 mb-1">Роль</label>
            <select asp-for="Role" class="form-control" disabled=@(Model.Role == Roles.Owner)>
                <option value="@Roles.Owner" hidden=@(Model.Role != Roles.Owner)>Власник</option>
                <option value="@Roles.Administrator">Адміністратор</option>
                <option value="@Roles.Operator">Оператор</option>
                <option value="@Roles.Default">Гість</option>
            </select>
            <span asp-validation-for="Role" class="text-danger ms-2"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label ms-2 mb-1">Пароль</label>
            <input type="text" asp-for="Password" value="@Model.Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger ms-2"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Оновити" class="btn btn-primary" />
            <a asp-controller="User" asp-action="Index" class="btn btn-secondary">Назад</a>
        </div>
    </form>
</div>