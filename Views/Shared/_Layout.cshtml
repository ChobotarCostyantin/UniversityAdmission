@using UniversityAdmission.Data.Repos
@inject UserRepository userRepository

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Приймальна комісія</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UniversityAdmission.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand ms-4" asp-area="" asp-controller="Home" asp-action="Index">Приймальна комісія</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    using UniversityAdmission.Data.Repos; aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Index">Головна</a>
                        </li>
                        @{
                            var user = userRepository.GetUserByToken(Context.Request.Cookies["access-cookie"]!);
                            if (user != null)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" id="navbarDropdown" role="button"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        Каталог
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Faculty"
                                                asp-action="Index">Факультети</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Department"
                                                asp-action="Index">Кафедри</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Speciality"
                                                asp-action="Index">Спеціальності</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Applicant"
                                                asp-action="Index">Абітурієнти</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Teacher"
                                                asp-action="Index">Викладачі</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Exam"
                                                asp-action="Index">Екзамени</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Group"
                                                asp-action="Index">Групи</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" id="navbarDropdown" role="button"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        Інф. Запити
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Info"
                                                asp-action="First">Перший запит</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Info"
                                                asp-action="Second">Другий запит</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Info"
                                                asp-action="Third">Третий запит</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Info"
                                                asp-action="Fourth">Четвертий запит</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Info"
                                                asp-action="Fifth">П'ятий запит</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Info"
                                                asp-action="Sixth">Шостий запит</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Info"
                                                asp-action="Seventh">Сьомий запит</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Info"
                                                asp-action="Eighth">Восьмий запит</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Info"
                                                asp-action="Ninth">Девятий запит</a></li>
                                        <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Info"
                                                asp-action="Tenth">Десятий запит</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginButtonPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="mx-5 px-5 my-auto">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Приймальна комісія
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
