@using UniversityAdmission.Models.Entities
@using UniversityAdmission.Models.DTO
@model GroupDTO
@{
    ViewData["Title"] = "Редагувати групу";
}

<div>
    <h2 class="text-center">Редагувати групу</h2>
    <form asp-action="Edit" class="w-75 mx-auto d-flex flex-column">
        <div class="form-group">
            <label asp-for="Name" class="control-label ms-2 mb-1">Назва групи</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger ms-2"></span>
        </div>
        <div class="form-group">
            <label asp-for="ExamDate" class="control-label ms-2 mb-1">Дата проведення екзамену</label>
            <input type="date" asp-for="ExamDate" class="form-control" />
            <span asp-validation-for="ExamDate" class="text-danger ms-2"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Оновити" class="btn btn-primary" />
            <a asp-controller="Group" asp-action="Index" class="btn btn-secondary ms-2">Назад</a>
        </div>
    </form>
</div>